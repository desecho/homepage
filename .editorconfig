# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.sh]
indent_style = space
indent_size = 2
# shfmt options
binary_next_line = true
switch_case_indent = true
space_redirects = false
keep_padding = false
function_next_line = false

[*.{css,js,json,less,scss,yml,yaml}]
indent_style = space
indent_size = 2

[*.html]
max_line_length = 180
indent_style = space
indent_size = 2

[{Makefile,*.mk}]
indent_style = tab
max_line_length = 180

[*.md]
indent_style = space
indent_size = 2
max_line_length = off
